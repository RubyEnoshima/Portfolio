---
import Gradiente from '../components/Gradiente.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '@fontsource-variable/onest'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Porfolio de Rubén López, Desarrollador Full-Stack y Desarrollador de Videojuegos" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="pb-1 sm:pb-6 relative">
		<Gradiente />
		<Header />
		<div class="mx-auto max-w-3xl px-5 mb-5 flex flex-col gap-10">
			<slot />
		</div>
		<Footer />

	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}

	body{
		display: flex;
		justify-content: center;
		flex-direction: column;
		background-color: #151925bc;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
</style>
